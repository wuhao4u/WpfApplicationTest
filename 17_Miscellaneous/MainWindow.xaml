<Window x:Class="_17_Miscellaneous.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DispatcherTimerSample" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="lblTime" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="3"/>
        <Button Name="btnStart" Grid.Row="1" Grid.Column="0" Click="btnStart_Click" Height="50" Content="Start" Margin="10"/>
        <Button Name="btnStop" Grid.Row="1" Grid.Column="2" Click="btnStop_Click"  Height="50" Content="Stop" Margin="10"/>
    </Grid>
</Window>
