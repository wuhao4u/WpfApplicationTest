        Title="BorderSample" Height="250" Width="300">
    <Grid>
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="10" CornerRadius="8,8,3,3">
            <StackPanel Margin="10">
                <Button>Button 1</Button>
                <Button Margin="0,10">Button 2</Button>
